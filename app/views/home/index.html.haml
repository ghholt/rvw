	%h2.explanation-text2.dkgray HEAT YOUR WAFEL WHILE YOU WAIT FOR YOUR COFFEE TO COOL DOWN

	.learn-more
		= link_to image_tag( 'buttons/learn-more-button_off.png', alt: "home", :class => "header-logo img-swap span_8_of_12"), wafel_path

// Break-Animation-Panel ----------------------------------------*
#break-animation-panel
	%table#actual-table
		%tr
			%td.orange-bg{:style => "border-left: none"}
				.css-clock
					.css-clock-pointer-seconds
					.css-clock-pointer-minutes
					.css-clock-pointer-hours
			%td.animation-cell1.blue-bg
				.animation-element.span_3_of_12
					#steam-little-cups
						#cup-steam
							= render(:partial => "common/steam")
						= image_tag( 'animation_panel/white-half-cup-with-wafel.png', alt: "clock", :class => "cup animation-cup span_11_of_12")
					%p.animation-text THE STEAM IS WARMING THE FILLING

			%td.animation-cell2.blue-bg
				.animation-element.span_3_of_12
					#steam-little-cups
						#cup-steam
							= render(:partial => "common/steam")
						= image_tag( 'animation_panel/white-half-cup-with-wafel2.png', alt: "clock", :class => "cup animation-cup span_11_of_12")
					%p.animation-text THE WAFEL IS CAPTURING THE AROMA

			%td.animation-cell3.blue-bg{:style => "border-right: none"}
				.animation-element.span_3_of_12
					#steam-little-cups
						#cup-steam
							= render(:partial => "common/steam")
						= image_tag( 'animation_panel/white-half-cup-with-wafel3.png', alt: "clock", :class => "cup animation-cup span_11_of_12")
					%p.animation-text 
						%span{:style => "opacity: 0; font-size: 0.75em"} THE WAFEL IS CAPTURING 
						%br/
						%span{:style => "font-size: 1.25em; margin-left: 3em"} READY

