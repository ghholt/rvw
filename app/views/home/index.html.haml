// Cup-Panel --------------------------------------------------*
#cup-panel.lt-gray-bg.span_12_of_12
	%h2.explanation-text1.dkgray WHEN YOUR COFFEE IS TOO HOT TO DRINK

	.centered-cup.span_8_of_12
		#steam-big-cups.span_6_of_12
			= image_tag( 'wafel-top1.png', alt: "wafel", :class => "wafel-top span_5_of_12")
